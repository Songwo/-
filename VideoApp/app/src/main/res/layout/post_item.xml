<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/background_gradient_new"
    android:layout_margin="8dp">

    <!-- 帖子类别和标题 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/post_section"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全漏洞讨论"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/post_title"
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="1"
            android:text="这是一个帖子标题"
            android:textSize="16sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:layout_marginStart="16dp"
            android:textStyle="bold"/>
    </LinearLayout>



    <TextView
        android:id="@+id/post_content"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text=""
        android:textSize="14sp"
        android:textColor="#FFFFFF"
        android:maxLines="3"
        android:ellipsize="end"
        android:lineSpacingMultiplier="1.2" />


    <!-- 作者头像、姓名、时间、评论数 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/post_avatar"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/banner4"
            android:scaleType="centerCrop"
            android:contentDescription="作者头像" />

        <TextView
            android:id="@+id/post_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="令狐冲"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginStart="16dp" />

        <TextView
            android:id="@+id/post_timestamp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="2023-10-01 14:30"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:gravity="center"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/post_reply_count"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="10"
            android:textSize="14sp"
            android:textColor="#FFFFFF"
            android:gravity="end"
            android:textStyle="bold"
            />
    </LinearLayout>

</LinearLayout>


